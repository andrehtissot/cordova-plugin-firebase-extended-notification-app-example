{
    "compilerOptions": {
        // "alwaysStrict": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "h",
        "lib": ["dom", "es5"],
        "module": "es6",
        // "noImplicitAny": true,
        // "noImplicitThis": true,
        "outDir": "./build.tmp",
        "removeComments": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
